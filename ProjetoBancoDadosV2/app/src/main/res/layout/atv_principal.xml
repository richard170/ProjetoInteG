<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50sp"
    android:orientation="vertical"
    tools:context=".AtvPrincipal">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:text="@string/menu"
        android:textAlignment="center"
        android:textSize="34sp" />

    <ImageButton
        android:id="@+id/btnVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/carro" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Carro"
        android:textAlignment="center" />

    <!-- Novo botÃ£o para deslogar -->

    <ImageButton
        android:id="@+id/btnDeslogar"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/deslogar" />

    <TextView
        android:id="@+id/textViewDeslogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deslogar"
        android:textAlignment="center" />

</LinearLayout>
